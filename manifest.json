{
  "manifest_version": 2,
  "name": "Dark-mode&videos-blocking",
  "version": "1.0.1",
  "description": "Enables a custom dark mode and/or color inversion. Also allows blocking video loading or autoplay.",
  "permissions": ["storage", "tabs"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon48.png",
    "default_title": "Dark-mode&videos-blocking",
    "browser_style": true,
    "show_matches": ["<all_urls>"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["dark.css", "invert.css"]
    }
  ],
  "web_accessible_resources": ["dark.css", "invert.css"],
  "browser_specific_settings": {
    "gecko": {
        "data_collection_permissions": {
          "required": ["none"]
         }
      }
  }
}